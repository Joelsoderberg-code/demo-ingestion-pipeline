# syntax=docker/dockerfile:1
FROM python:3.11-slim

ENV PYTHONDONTWRITEBYTECODE=1 \
    PYTHONUNBUFFERED=1

WORKDIR /app

# Install system dependencies (if any needed for requests/uvicorn)
RUN apt-get update -y && apt-get install -y --no-install-recommends \
    curl \
    && rm -rf /var/lib/apt/lists/*

COPY requirements.txt ./
RUN pip install --no-cache-dir -r requirements.txt

# Copy app
COPY . .

# Do NOT bake secrets. Env is injected at runtime in Cloud Run.

# Cloud Run injects PORT env var. Default to 8080 for local docker run.
ENV PORT=8080

EXPOSE 8080

# Use shell form so ${PORT} is expanded by the shell in Cloud Run
CMD sh -c 'uvicorn app:app --host 0.0.0.0 --port ${PORT}'

